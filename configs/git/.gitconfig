[user]
  email =
  name =
[core]
  excludesfile = ~/dotfiles/configs/git/.gitignore
  editor = nvim
  pager = tr -d '\\r' | less -REX
  autocrlf = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[commit]
  verbose = true
[color]
  ui = true
